<div class="modal " tabindex="-1" role="dialog" id="lModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header" style="background-color: #f37121 !important;">
        <h3 class="modal-title text-left">Customer Login </h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h4 style="color: #111d5e !important;">Sign in and place an Order!</h4>



        <div class="container-fluid text-center justify-content-center flex-row d-flex">

          <a href="#"><i style="padding-right: 30px;" class="fa fa-5x fa-facebook-official" aria-hidden="true"></i></a>
          <a href="#"><i style="padding-right: 30px;" class="fa fa-5x fa-google" aria-hidden="true"></i></a>
          <a href="#"><i class="fa fa-5x fa-apple" aria-hidden="true"></i></a>
        </div>






        <hr>
        <form>
          <div class="form-group">
            <label for="emailInput">Email Address</label>
            <input type="email" class="form-control" id="emailInput" aria-describedby="emailHelp"
              placeholder="Enter email" autocomplete="email">
          </div>
          <div class="form-group">
            <label for="passInput">Password</label>
            <input type="password" class="form-control" id="passInput" placeholder="Password"
              autocomplete="new-password">
          </div>
        </form>
      </div>
      <div class="modal-footer justify-content-center">


        <button type="button" class="btn " style="color:white !important; background-color: #111d5e !important;">Sign
          In</button>


      </div>
    </div>
  </div>
</div>
</div>